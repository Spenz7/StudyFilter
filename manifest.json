{
  "manifest_version": 3,
  "name": "StudyFilter",
  "version": "1.0",
  "description": "Block distracting sites and stay focused on your goals",

  
  "permissions":["tabs","storage","scripting"],
  "host_permissions":["<all_urls>"],

  "action": {
    "default_popup": "popup/hello.html",
    "default_icon": "images/hello_extensions.png"
  },
  "background":{
    "service_worker":"scripts/background.js"
  },
  "web_accessible_resources": [
    {
    "resources": ["reminder.html","images/tokyotech2.png"],
    "matches":["<all_urls>"]
    }
  ],
  "commands": {
    "add-to-blacklist": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Add current site to blacklist"
    },
    "remove-from-blacklist": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Remove current site from blacklist"
    },
    "add-to-whitelist": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Add current site to whitelist"
    },
    "remove-from-whitelist": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "Remove current site from whitelist"
    }
  }


 
}
